<!DOCTYPE html>
<html>
    <header>
        <% include ../views/partials/header %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='/stylesheets/emoji.css' />
    </header>

<body>

	<% if (user) { %>

	<h1>User List 1</h1>

	<div class="container">
	<% userlists.forEach( function(userlist) { %>
		<% userlist.userlist.forEach(function(gear) { %>
		<div class="col-md-4">
			<h4 class="list-item"><%= gear %></h4>
			<br>
			<div class="emoji-toggle emoji-travel">
			  <input type="checkbox" id="toggle2" class="toggle">
			  <div class="emoji"></div>
			  <label for="toggle2" class="well"></label>
			</div>
			<button class="btn btn-danger userlistdelete">Remove</button>
		</div>
		<% }); %>
    <% }); %>

    <% }; %>

</div>

	<script>
     $(function() {
      $('.userlistdelete').on('click', function() {
            $(this).parent().remove();
       });
     });
   </script>

</body>
</html>